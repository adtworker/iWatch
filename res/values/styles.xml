<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="noTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="button_style">
       <item name="android:textSize">16dp</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:layout_weight">1</item>
       <item name="android:focusable">true</item>
       <item name="android:background">@drawable/btn_function</item>
       <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="button_style2">
       <item name="android:textSize">16dp</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:focusable">true</item>
       <item name="android:background">@drawable/btn_function</item>
       <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="clock">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="progressBarTxt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlarmEvent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:verticalSpacing">3dp</item>
    </style>

    <style name="BigTimeTxt">
        <item name="android:textSize">105dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MediumTimeTxt">
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BigTitleTxt">
        <item name="android:textSize">48dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MediumTitleTxt">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AmPmTxt">
        <item name="android:textSize">40dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MediumAmPmTxt">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AlertPromptTxt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TimePicker">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
